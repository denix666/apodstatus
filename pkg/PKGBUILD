pkgname=apodstatus
pkgver=0.1.0
pkgrel=1
pkgdesc="Airpods status and information for Linux."
arch=('x86_64')
url='https://github.com/denix666/apodstatus'
license=('MIT')

source=('apodstatus'
    'apodstatus.png'
    'apodstatus.desktop')
provides=('apodstatus')
conflicts=('apodstatus')

package() {
    cd ${srcdir}
    install -d -m755 ${pkgdir}/usr/bin
    install -D -m644 apodstatus.png ${pkgdir}/usr/share/pixmaps/apodstatus.png
    install -D -m644 apodstatus.desktop ${pkgdir}/usr/share/applications/apodstatus.desktop
    install -D -m755 apodstatus ${pkgdir}/usr/bin/apodstatus
}
sha256sums=('dbaf7e721c50bddd0b2f3e3cd99b330058c79fa214a9080028aa1ef0bb350825'
            'adb3fe5a12a27669eaf246e9440dd44e2f7f1ac5764481e3c41aedf91d0fee3c'
            'f32ad5e30fd33c808f6a9d7fbfa24fdfd3fcfbc0e8902d62963bb59e9ce897f3')
